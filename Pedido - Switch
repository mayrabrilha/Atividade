#include <stdio.h>

int main()
{
    float  quantidade, calculo, preco;
    
    int pedido;
    
    printf("Digite o pedido: ");
    scanf("%i", &pedido);
    
    switch ( pedido ) {
    case 100:

     preco = 1.20;
     printf("Cachorro Quente \n");
     printf("Digite a quantidade: ");
    scanf("%f", &quantidade);
    calculo = preco * quantidade;
    printf("O valor do seu pedido é R$ %.2f",calculo);
    
    break;
  
    case 101:

    preco = 1.30;
    printf("Bauru Simples \n");
    printf("Digite a quantidade: ");
    scanf("%f", &quantidade);
    calculo = preco * quantidade;
    printf("O valor do seu pedido é R$ %.2f",calculo);
    
    break;
    
    case 102:
    
    preco = 1.50;
    printf("Bauru com ovo \n");
    printf("Digite a quantidade: ");
    scanf("%f", &quantidade);
    calculo = preco * quantidade;
    printf("O valor do seu pedido é R$ %.2f",calculo);
    
    break;
    
    case 103:
    
    preco = 1.20;
    printf("Hamburguer \n");
    printf("Digite a quantidade: ");
    scanf("%f", &quantidade);
    calculo = preco * quantidade;
    printf("O valor do seu pedido é R$ %.2f",calculo);
    
    break;
    
    case 104: 
    
    preco = 1.70;
    printf("Cheeseburguer \n");
    printf("Digite a quantidade: ");
    scanf("%f", &quantidade);
    calculo = preco * quantidade;
    printf("O valor do seu pedido é R$ %.2f",calculo);
    
    break;
    
    case 105: 
    
    preco = 2.20;
    printf("Suco \n");
    printf("Digite a quantidade: ");
    scanf("%f", &quantidade);
    calculo = preco * quantidade;
    printf("O valor do seu pedido é R$ %.2f",calculo);
    
    break;
  
    case 106: 
    
    preco = 1.00;
    printf("Refrigerante \n");
    printf("Digite a quantidade: ");
    scanf("%f", &quantidade);
    calculo = preco * quantidade;
    printf("O valor do seu pedido é R$ %.2f",calculo);
    
    break;
    
    default: printf("Essa comida não está disponível!!"); 
}


}

