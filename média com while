#include <stdio.h>

int main()
{
 float nota1, nota2, soma, media;

 
// entrad de dados
 printf ( "digite a primeira nota:");
    scanf("%f", &nota1);
    
//Comando while vai servir para limitarmos os caracteres que desejamos que o cliente irá digitar. No caso serão valores menores que 10

while (nota1 > 10){
    printf("digite um número menor ou igual a 10:"   );
    scanf("%f", &nota1);
   nota1--;
    
    

    
printf( "digite a segunda nota: ");
scanf("%f", &nota2);

//Processamento 

media=(nota1 + nota2)/2;

printf("a sua media foi:%.2f\n",media);


if (media >= 6){
printf("APROVADO");    
}
else if (media >= 4 && media <= 5){
    printf("você está de recupração");
}
else{ printf("REPROVADO");
}
}
}
