#include <stdio.h>
#include <math.h>

int main()
{
    float numero;
    
    printf("Digite um número maior que 0 para descobrir a raiz quadrada: \n");
    scanf("%f", &numero);
    
    if (numero >= 0 ){
        
        
        printf("A raiz quadrada é: %f\n", sqrt(numero));
        
    } else{
        
        printf("Número invalido, digite outro número, você é patetico!");
        
    }
}
