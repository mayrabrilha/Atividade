#include <stdio.h>

int main()
{
    
    char letra;
    
    printf("Digite uma letra minúscula:\n");
    scanf("%c", &letra);

    
    switch(letra){
        
        case 'a':
        printf("Essa letra é uma vogal");
        break;
        
        case 'e':
        printf("Essa letra é uma vogal");
        break;
        
        case 'i':
        printf("Essa letra é uma vogal");
        break;
        
        case '0':
        printf("Essa letra é uma vogal");
        break;
        
        case 'u':
        printf("Essa letra é uma vogal");
        break;
        
        default:
        printf("Essa letra é uma consoante");
    }
    
}

