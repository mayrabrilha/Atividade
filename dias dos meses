#include <stdio.h>

int main()
{
    int dias;
    
    printf("Escreva o número do mês de 1 a 12: \n");
    scanf("%i", &dias);
    
    switch(dias){
       
       case 2:
       printf("Este mês tem 28 dias ");
       break;
       
       case 4:
       printf("Este mês tem 30 dias ");
       break;
       
       case 6:
       printf("Este mês tem 30 dias ");
       break;
       
       case 9:
       printf("Este mês tem 30 dias ");
       break;
       
       case 11:
       printf("Este mês tem 30 dias ");
       break;
       
       case 1:
       printf("Este mês tem 31 dias ");
       break;
       
       case 3:
       printf("Este mês tem 31 dias ");
       break;
       
       case 5:
       printf("Este mês tem 31 dias ");
       break;
       
       case 7:
       printf("Este mês tem 31 dias ");
       break;
       
       case 8:
       printf("Este mês tem 31 dias ");
       break;
       
       case 10:
       printf("Este mês tem 31 dias ");
       break;
       
       case 12:
       printf("Este mês tem 31 dias ");
       break;
       
       
    }
}

