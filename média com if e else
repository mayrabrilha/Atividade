#include <stdio.h>

int main()
{
 float nota1, nota2, soma, media;
 int i=0;
 
// entrad de dados
 printf ( "digite a primeira nota:");
    scanf("%f", &nota1);
    

    
    
    
    
    
printf( "digite a segunda nota: ");
scanf("%f", &nota2);

//Processamento 

