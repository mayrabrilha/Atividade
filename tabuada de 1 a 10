#include <stdio.h>

int main(){
    
    int n1, n10=10;
    
    
    printf("Digite um número entre 1 e 10 para gerar a tabuada ");
    scanf("%i", &n1);
    
        if(n1 > n10){
            printf("Número invalido, deve ser um numero de 1 a 10");
        }else{
        
    printf("Tabuada do %d:\n", n1);
    
// %d: indica que será impresso um número inteiro (o número da tabuada),
// \n faz com que a próxima impressão pule uma linha.

            for (int i = 1; i <= 10; i++) {
                printf("%d x %d = %d\n", n1, i, n1 * i);
                }
                
// o primeiro %d vai ser substituído por n1, o segundo %d vai ser substituído por i
//o for vai continuar transformando o i de 1 até 10 
// o final n1 * i faz a multiplicação do número vezes 1 até 10

    return 0;
}
}

